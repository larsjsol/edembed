{
    "manifest_version": 2,
    
    "name": "Edembed",
    "description": "Edit online text with proper editors",
    "version": "0.1.2",

    "permissions": ["tabs", "<all_urls>"],

    "plugins": [
        { 
            "path": "libedembed.so",  
            "public": true
        }
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib.js", "edembed.js"]
        }
    ],

    "browser_action": {
        "default_icon": "enabled.png",
        "default_title": "Toggle Edembed"
    },
    
    "background": { "scripts": ["background.js"] }
            
}
